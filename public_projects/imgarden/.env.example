# Naviyam Chatbot Environment Variables

# Model Configuration
MODEL_NAME=skt/A.X-3.1-Light
NLU_TYPE=ax_encoder  # Options: ax_lite, ax_encoder
USE_4BIT=true
USE_TRAINED=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your-secure-api-key-here
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Database Configuration
DATABASE_URL=postgresql://naviyam:naviyam123@postgres:5432/naviyam_db
REDIS_URL=redis://redis:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/naviyam.log

# Model Cache
HF_HOME=/root/.cache/huggingface
TRANSFORMERS_CACHE=/root/.cache/huggingface/transformers

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# Performance
MAX_WORKERS=4
REQUEST_TIMEOUT=60
MAX_REQUEST_SIZE=10485760  # 10MB

# Security
SECRET_KEY=your-secret-key-for-jwt
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Feature Flags
ENABLE_CACHE=true
ENABLE_LEARNING=true
ENABLE_RAG=true
ENABLE_METRICS=true

# External Services (Optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# Monitoring (Optional)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000